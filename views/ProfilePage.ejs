<script>
  document.addEventListener("DOMContentLoaded", function() {
      var toggleButton = document.getElementById('toggleButton');
      var instrumentSelectDiv = document.getElementById('Instrumentselect');

      toggleButton.addEventListener('click', function(e) {
          e.preventDefault(); // Evita a ação padrão de navegação do link

          if (instrumentSelectDiv.style.display === 'none') {
              instrumentSelectDiv.style.display = 'block';
              instrumentSelectDiv.scrollIntoView({ behavior: 'smooth' }); // Rolando suavemente até a div
          } else {
              instrumentSelectDiv.style.display = 'none';
          }
      });
  });
</script>
