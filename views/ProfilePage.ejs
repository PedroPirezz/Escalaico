          <label class="form-check-label" for="checkboxViolao">
              <h3>Violão</h3>  
          </label>
      </div>
      
      <div class="form-check">
          <input class=" che" type="checkbox" id="checkboxTeclado" name="instrumentos" value="Teclado"
                 <% if (Perfil.Teclado === 'Disponivel') { %> checked <% } %>>
          <label class="form-check-label" for="checkboxTeclado">
             <h3>Teclado</h3> 
          </label>
      </div>
      
      <div class="form-check">
          <input class=" che" type="checkbox" id="checkboxBaixo" name="instrumentos" value="Baixo"
                 <% if (Perfil.Baixo === 'Disponivel') { %> checked <% } %>>
          <label class="form-check-label" for="checkboxBaixo">
              <h3>Baixo</h3>
          </label>
      </div>
      
      <div class="form-check">
          <input class=" che" type="checkbox" id="checkboxBateria" name="instrumentos" value="Bateria"
